{
    "name": "node-koa-ts",
    "version": "1.0.0",
    "description": "node-koa-ts",
    "main": "index.js",
    "scripts": {
        "dev": "set NODE_ENV=dev && nodemon --exec ./node_modules/.bin/ts-node -- src/index.ts",
        "build": "npm run build-ts && npm run copy-static-assets",
        "pm2": "npx pm2 start -n 'node-koa-ts' ./dist/index.js --  -p 8848  --logPath './log' --env 'offline'",
        "build-ts": "tsc",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "tslint": "tslint -c tslint.json -p tsconfig.json"
    },
    "private": true,
    "dependencies": {
        "config": "^3.3.12",
        "fs": "0.0.1-security",
        "jsonwebtoken": "^8.5.1",
        "koa": "^2.15.3",
        "koa-bodyparser": "^4.4.1",
        "koa-jwt": "^3.6.0",
        "koa-router": "^7.4.0",
        "koa-sslify": "^4.0.3",
        "koa-static": "^5.0.0",
        "koa2-cors": "^2.0.6",
        "marked": "^4.3.0",
        "pm2": "^4.5.6",
        "winston": "^3.15.0",
        "winston-daily-rotate-file": "^4.7.1",
        "ws": "^8.18.0",
        "xdatetime": "^1.4.7",
        "yaml": "^1.10.2",
        "yargs": "^14.2.3"
    },
    "devDependencies": {
        "@types/config": "^0.0.36",
        "@types/js-yaml": "^3.12.10",
        "@types/jsonwebtoken": "^8.5.9",
        "@types/koa": "^2.15.0",
        "@types/koa-bodyparser": "^4.3.12",
        "@types/koa-jwt": "^3.3.0",
        "@types/koa-router": "^7.4.8",
        "@types/koa-sslify": "^4.0.6",
        "@types/koa-static": "^4.0.4",
        "@types/koa2-cors": "^2.0.5",
        "@types/lodash": "^4.17.10",
        "@types/shelljs": "^0.8.15",
        "@types/ws": "^8.5.12",
        "@types/yargs": "^13.0.12",
        "lint-staged": "^9.5.0",
        "nodemon": "^1.19.4",
        "shelljs": "^0.8.5",
        "ts-node": "^8.10.2",
        "tslint": "^5.20.1",
        "typescript": "^5.6.3"
    },
    "repository": {
        "type": "git",
        "url": ""
    },
    "keywords": [
        "compile"
    ],
    "author": "packjs",
    "contributors": [
        "packjs"
    ],
    "license": "ISC",
    "pre-commit": [
        "tslint"
    ],
    "lint-staged": {
        "linters": {
            "{src}/**/*.{ts}": [
                "tslint"
            ]
        }
    }
}
